<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Nueva Cuenta" : "Editar Perfil" %></h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :name, 'Nombre' %>
                <%= f.text_field :name, autofocus: true %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :email, 'Correo Electrónico', class: "active" %>
                <%= f.email_field :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password, 'Contraseña', class: "active" %>
                <%= f.password_field :password %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password_confirmation, 'Confirmar Contraseña', class: "active" %>
                <%= f.password_field :password_confirmation %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.button(@student.new_record? ? "Registrate" : "Actualizar", class: "btn orange waves-effect waves-light right") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
