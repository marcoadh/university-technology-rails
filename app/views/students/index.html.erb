<div class="row">
  <div class="col s12">
    <h2 class="center-align">Lista de Estudiantes</h2>
  </div>
</div>
<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= student.name %></span>
          <p><%= student.email %></p>
        </div>
        <div class="card-action">
          <a href="">Ver Perfil</a>
          <a href="">Ver Cursos</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
