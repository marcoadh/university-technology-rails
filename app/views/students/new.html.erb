            <div class="row">
              <div class="input-field col s12">
                <%= f.label :name, 'Nombre' %>
                <%= f.text_field :name, autofocus: true %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :email, 'Correo ElectrÃ³nico' %>
                <%= f.email_field :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.submit "Registrate", class: "btn blue lighten-1 waves-light" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
