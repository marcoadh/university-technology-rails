<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Iniciar Sesión</h3>
        <div class="row">
          <%= form_for(:logins, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :email, 'Correo Electrónico'%>
                <%= f.email_field :email, autofocus: true %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password, 'Contraseña' %>
                <%= f.password_field :password %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.button "Ingresar", class: "btn orange waves-effect waves-light right" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
